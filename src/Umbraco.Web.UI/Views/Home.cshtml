@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedModels;
@{
    var variationContext = global::Umbraco.Core.Composing.Current.Factory.GetInstance<IVariationContextAccessor>()?.VariationContext;
    string targetSegment = string.IsNullOrEmpty(variationContext.Segment) ? "b" : "";
}

<h2>@Model.Title</h2>

<div style="position: fixed;bottom: 1em;right: 1em;padding: 1em 2em;background: white;box-shadow: 0 0 10px black;">
    <a class="segment-switch" href="@(Request.Path)?s=@targetSegment">Switch segment</a>

    <style>
        .segment-switch {
            color: inherit;
            text-decoration: none;
            font-weight: bold;
        }

        a.segment-switch:visited {
            color: inherit;
        }
    </style>
</div>
